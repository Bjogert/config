{
    "files.associations": {
        "*.yaml": "home-assistant",
        "*.yml": "home-assistant"
    },
    "yaml.schemas": {},
    "yaml.customTags": [
        "!input scalar",
        "!input sequence", 
        "!input mapping",
        "!include scalar",
        "!include_dir_list sequence",
        "!include_dir_merge_list sequence",
        "!include_dir_merge_named mapping", 
        "!include_dir_named mapping",
        "!secret scalar"
    ],
    "yaml.validate": false,
    "yaml.completion": false,
    "yaml.schemaStore.enable": false,
    "yaml.format.enable": false,
    "redhat.telemetry.enabled": false,
    
    "homeassistant.longLivedAccessToken": "",
    "homeassistant.hostUrl": "http://192.168.68.105:8123",
    "homeassistant.ignoreCertificates": false,
    "homeassistant.enableCodeActions": true,
    "homeassistant.enableSnippets": true,
    
    "[home-assistant]": {
        "editor.defaultFormatter": "keesschollaart.vscode-home-assistant",
        "editor.formatOnSave": false,
        "yaml.validate": false
    },
    
    "[yaml]": {
        "yaml.validate": false,
        "editor.defaultFormatter": "keesschollaart.vscode-home-assistant"
    },
    
    "homeassistant.pathToPythonExecutable": "python3",
    
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.db": true,
        "**/*.log": true,
        ".storage": true,
        "tts": true,
        "image": true
    },
    
    "files.watcherExclude": {
        "**/*.db": true,
        "**/*.log*": true,
        "**/tts/**": true,
        "**/image/**": true,
        "**/.storage/**": true
    },
    
    "problems.decorations.enabled": false
}